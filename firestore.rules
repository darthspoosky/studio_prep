rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // USER DATA
    match /userProfiles/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own usage stats. Global stats are handled separately.
    match /toolUsage/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == docId;
      allow read: if docId == 'global';
      allow write: if request.auth != null && docId == 'global';
    }

    // Allow anyone to read ideas and allow anyone to create them (for anonymous surveys).
    match /ideas/{ideaId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }

    // USER-SCOPED COLLECTIONS
    match /userHistory/{historyId} {
      allow get, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null;
    }

    match /quizAttempts/{attemptId} {
      allow get, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null;
    }

    match /mainsAnswers/{answerId} {
      allow get, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null;
    }
    
    match /savedQuestions/{questionId} {
      allow get, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null;
    }
    
    // Past Year Question Bank collections
    match /pastYearQuestions/{questionId} {
      allow read: if request.auth != null;
      allow write: if false;  // Admin only via Firebase Admin SDK
    }

    match /userProgress/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /syllabusSections/{sectionId} {
      allow read: if request.auth != null;
      allow write: if false;  // Admin only
    }

    // ADMIN-MANAGED CONTENT COLLECTIONS
    // Study materials (books, PDFs, etc.)
    match /studyMaterials/{materialId} {
      allow read: if request.auth != null;
      allow write: if false;  // Admin only via Firebase Admin SDK
    }

    // Media assets (images, diagrams, etc.)
    match /mediaAssets/{assetId} {
      allow read: if request.auth != null;
      allow write: if false;  // Admin only via Firebase Admin SDK
    }

    // News articles for current affairs
    match /newsArticles/{articleId} {
      allow read: if request.auth != null;
      allow write: if false;  // Admin only via Firebase Admin SDK
    }

    // Bulk user import queue
    match /bulkUserImports/{importId} {
      allow read, write: if false;  // Admin only via Firebase Admin SDK
    }

    // Analytics imports
    match /analyticsImports/{importId} {
      allow read, write: if false;  // Admin only via Firebase Admin SDK
    }

    // Admin audit logs
    match /adminAuditLogs/{logId} {
      allow read, write: if false;  // Admin only via Firebase Admin SDK
    }

    // System configuration
    match /systemConfig/{configId} {
      allow read: if request.auth != null;  // Users can read certain configs
      allow write: if false;  // Admin only via Firebase Admin SDK
    }
  }
}
